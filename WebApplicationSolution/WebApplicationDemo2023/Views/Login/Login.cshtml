<partial name="Message" />
<form asp-controller="Login" asp-action="Connect" method="post">
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input type="text" name="utilisateur" class="form-control" />
        <label class="form-label" for="utilisateur">Utilisateur</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input type="password" name="mdp" class="form-control" />
        <label class="form-label" for="mdp">Mot de passe</label>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Se connecter</button>

</form>